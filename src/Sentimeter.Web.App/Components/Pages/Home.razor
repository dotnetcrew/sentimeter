@page "/"

<PageTitle>Sentimeter - Home</PageTitle>

<h1>Welcome to</h1>
<div>
    <img src="logo.png" alt="sentimeter-logo" class="figure-img" />
</div>

<AuthorizeView>
    <Authorized>
        <p>Welcome @context.User.Identity?.Name!</p>
    </Authorized>
    <NotAuthorized>
        <div>
            Please login to start using sentimeter.
        </div>
        <hr/>
        <div>
            <a href="authentication/login" class="btn btn-primary">Login</a>
        </div>
    </NotAuthorized>
</AuthorizeView>
